{
    "compilerOptions": {
        "strict": true,
        "module": "CommonJS",
        "target": "ES2020",
        "lib": [
            "ES2020"
        ],
        "declaration": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": ".",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": [
        "nodes/**/*.ts",
        "credentials/**/*.ts",
        "tests/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}